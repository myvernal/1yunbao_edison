<?xml version="1.0" encoding="utf-8"?><!-- 头部相对布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/title_bg">

    <TextView
        android:id="@id/titlebar_id_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:shadowColor="#4c000000"
        android:shadowDx="0.0"
        android:shadowDy="1.0"
        android:shadowRadius="1.0"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:text="易运宝"
        android:textSize="20.0sp" />

    <ImageView
        android:id="@id/titlebar_id_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="12dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/common_title_back_selector"
        android:src="@drawable/header_back" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@id/titlebar_id_tip"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone"
            android:src="@drawable/header_more"/>

        <Button
            android:id="@id/titlebar_id_more"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:textColor="@drawable/common_title_selector_textcolor"
            android:textSize="16sp"
            android:padding="10dp"
            android:visibility="visible"
            android:background="#00000000"
            android:text="礼品"/>
    </RelativeLayout>
</RelativeLayout>